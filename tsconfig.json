{
    "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",
      "lib": ["ES2022"],
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "paths": {
        "@/*": ["./*"],
        "@config/*": ["config/*"],
        "@services/*": ["services/*"],
        "@models/*": ["models/*"],
        "@routes/*": ["routes/*"],
        "@utils/*": ["utils/*"],
        "@types/*": ["../types/*"]
      },
      "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": ["src/**/*", "types/**/*", "*.ts"],
    "exclude": ["node_modules", "dist"]
  }